{% extends 'base.html' %}
{% load static %}

{% block title %} Welcome! {% endblock %}

{% block body_block %}


		<section class="home-top">
			<div class="inner">
				<h1>Welcome To Our Store!</h1>
				<figure>
				    <!--	<img src="http://dummyimage.com/623x260/4ec4e4/fff"> -->
				    <a href="{% url 'basefunctions.views.contact' %}"><img src="{% static 'img/front.jpg' %}"></a>
				</figure>	
				<br>
				<p class="no-margin-bottom">Through quality merchandise and customer service, our mission is to give smokers a better alternative to tobacco, while also fulfilling the needs of the vaping enthusiast.  
				</p><br />
			</div>	
		</section>
		<section class="home-bot">
			<div class="inner cf">
				<div class="col">
					<h1>Products</h1>
						<figure><a href="{% url 'inventory.views.category_list' %}"><img src="{% static 'img/mvp.png' %}"></a></figure>
						<p>We sell a full range of personal vaporizer, juices, batteries, cartomizers and many other accessories.</p>
						<a href="{% url 'inventory.views.category_list' %}"><span class="button">View our complete Inventory</span></a>
				</div>
				<div class="col">
					<h1>Deals</h1>
					<span class="deal"><h3>Plume-Master Deluxe:</h3>Buy 5 bottles of juice and recieve the 6th free! (email registration required, house brand)</span>
					<span class="deal"><h3>Refer a friend:</h3>refer a purchase of $15 or more and get a free 10ml bottle of juice!</span>
				</div>
			</div>

		</section>

{% endblock %}
